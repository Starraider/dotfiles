{
  // Editor
  "editor.fontFamily": "FuraCode Nerd Font, FiraCode Nerd Font, Fira Code, Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "color-highlight.markerType": "dot-before",
  "color-highlight.languages": ["*"],
  "color-highlight.matchWords": true,
  "editor.colorDecorators": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.titleScrollbarSizing": "large",
  // Terminal
  "terminal.integrated.fontFamily": "FuraCode Nerd Font, FiraCode Nerd Font, Fira Code, Consolas, monospace",
  "terminal.integrated.cursorBlinking": true,
  // Git
  "git.path": "/usr/bin/git",
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "git.confirmSync": false,
  "githubIssues.useBranchForIssues": "off",
  "githubIssues.issueCompletionFormatScm": "fix: #${issueNumber} - ${issueTitle}",
  "conventionalCommits.gitmoji": false,
  // Gitlens
  "gitlens.views.repositories.location": "gitlens",
  "gitlens.views.fileHistory.location": "gitlens",
  "gitlens.views.lineHistory.location": "gitlens",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  // ToDo
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "red",
      "border": "1px solid rgba(188,80,80,0.6)",
      "borderRadius": "2px",
      "backgroundColor": "rgba(188,80,80,0.3)"
    }
  ],
  "todo-tree.tree.showScanModeButton": false,
  //
  "python.insidersChannel": "off",
  "gitlens.views.repositories.files.layout": "list",
  "color-highlight.markRuler": false,
  "projectManager.git.ignoredFolders": [

    "node_modules",
    "out",
    "typings",
    "test",
    ".haxelib"
  ],
  // Java
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "/Library/Java/JavaVirtualMachines/jdk1.8.0_261.jdk/Contents/Home"
    },
    {
      "name": "JavaSE-11",
      "path": "/Library/Java/JavaVirtualMachines/jdk-11.0.8.jdk/Contents/Home",
      "default": true
    }
  ],
  "extensions.ignoreRecommendations": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "java.home": "/Library/Java/JavaVirtualMachines/jdk-11.0.8.jdk/Contents/Home",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "editor.formatOnSaveMode": "modifications"
}
